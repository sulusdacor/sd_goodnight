		<operations>
			<li Class="sd_goodnight.PatchOperationFindMod">
				<modName>More Furniture [1.0]</modName>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>*/ThingDef[defName = "sd_basebed"]/comps/li[@Class = "CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
				<value>
					<li>Anon2Dresser</li>
					<li>Anon2EndTable</li>
					<li>Anon2EndTableLight</li>
					<li>Anon2RoyalEndTable</li>
					<li>Anon2RoyalEndTableLight</li>
				</value>
			</li>
			</operations>
	</Operation>
	
	

</Patch>